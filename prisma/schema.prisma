
generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url =  env("DATABASE_URL")
}

// ---------------------------------------------------------------------------
// AUTH MODELS
// ---------------------------------------------------------------------------

model Me {
  id String @id
}

model User {
  id            String        @id
  name          String
  email         String        @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  sessions      Session[]
  accounts      Account[]

  // App relations
  notes           Note[]
  summaries       Summary[]
  flashcardSets   FlashcardSet[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt

  @@map("verification")
}

// ---------------------------------------------------------------------------
// LEARNESSENCE APP MODELS
// ---------------------------------------------------------------------------

model Note {
  id          String          @id @default(cuid())
  title       String
  content     String          // plain text body
  userId      String
  user        User            @relation(fields: [userId], references: [id])

  transcription Transcription?
  summaries     Summary[]
  flashcardSets FlashcardSet[]

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

enum NoteSourceType {
  VOICE
  TEXT
  IMPORTED
}

model Transcription {
  id        String   @id @default(cuid())
  rawText   String
  cleaned   String?
  noteId    String   @unique
  note      Note     @relation(fields: [noteId], references: [id])

  createdAt DateTime @default(now())
}

model Summary {
  id          String        @id @default(cuid())
  originalId  String?
  original    Note?         @relation(fields: [originalId], references: [id])
  
  content     String        // markdown summary
  style       SummaryStyle

  userId      String
  user        User          @relation(fields: [userId], references: [id])

  createdAt   DateTime      @default(now())
}

enum SummaryStyle {
  FLASH
  KEYS
  DETAILED
  TEACHER
  EXAM
}

model FlashcardSet {
  id            String       @id @default(cuid())
  title         String?
  userId        String
  user          User         @relation(fields: [userId], references: [id])

  sourceNoteId  String?
  sourceNote     Note?       @relation(fields: [sourceNoteId], references: [id])

  cards         Flashcard[]

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Flashcard {
  id        String        @id @default(cuid())
  question  String
  answer    String

  setId     String?
  set       FlashcardSet?  @relation(fields: [setId], references: [id], onDelete: Cascade)

  createdAt DateTime       @default(now())
}
